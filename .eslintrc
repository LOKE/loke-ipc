---
  env:
    node: true
    mocha: true

  rules:
    # no-only: 2
    # no-tabs: 2
    # Probably need to fix these
    quotes:
      - 2
      - "single"
    semi: 1
    curly: 1
    camelcase: 1
    space-infix-ops: 0
    no-unused-vars:
      - 1
      - args: none
    no-comma-dangle: 1
    eqeqeq: 2
    dot-notation: 1

    # Maybe
    consistent-return: 1
    no-loop-func: 1
    no-empty: 1
    new-cap: 0
    no-path-concat: 1
    no-constant-condition: 1

    # Done care
    no-process-exit: 0
    strict: 0
    no-use-before-define: 0
    no-underscore-dangle: 0
    no-mixed-requires: 0
    no-shadow: 0
